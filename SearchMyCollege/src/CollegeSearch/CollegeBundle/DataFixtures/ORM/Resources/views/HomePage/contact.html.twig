{% extends 'CollegeSearchCollegeBundle::layout.html.twig' %}

{% block title %}Contact{% endblock%}

{% block body %}
    <header>
        <h1>Contact US</h1>
    </header>

{%  for flashMessage in app.session.flashbag.get('blogger-notice') %}
    <div class="blogger-notice">
{{ flashMessage }}
    </div>
	{% endfor %}

    <form action="{{ path('college_search_college_contactpage') }}" method="post" {{ form_enctype(form) }} class="contactform">
        {{ form_errors(form) }}

        {{ form_row(form.name) }}
        {{ form_row(form.email) }}
        {{ form_row(form.subject) }}
        {{ form_row(form.body) }}

        {{ form_rest(form) }}

        <input type="submit" value="Submit" />
    </form>
{% endblock %}